{
  "name": "commitlint-plugin-i18n",
  "version": "0.0.1",
  "main": "libs/index.js",
  "license": "MIT",
  "scripts": {
    "develop": "rimraf ./libs && tsc --project ./src --outDir ./libs --declaration --watch",
    "release": "rimraf ./libs && tsc --project ./src --outDir ./libs --declaration",
    "start": "npm run develop",
    "commitmsg": "npx commitlint -e $GIT_PARAMS"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/rules": "^8.3.4",
    "commitlint": "^8.3.4",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "rimraf": "^2.6.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "@commitlint/lint": "^8.3.4"
  }
}
